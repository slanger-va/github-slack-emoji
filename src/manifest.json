{
  "manifest_version": 2,
  "name": "Slack-moji",
  "description": "Use custom slack emoji in github",
  "version": "1.0",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["creds.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "permissions": ["storage", "unlimitedStorage", "identity"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "assets/css/*",
    "assets/js/*",
    "assets/fonts/*"
  ],
  "icons": {
    "16": "slack-moji-16.png",
    "32": "slack-moji-32.png",
    "48": "slack-moji-48.png",
    "128": "slack-moji-128.png"
  }
}
